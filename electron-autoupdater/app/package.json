{
  "name": "electron-app",
  "version": "1.0.6",
  "description": "My test electron app",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron",
    "build": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DeekshaKhattar/new-auto-update.git"
  },
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "build": {
    "appId": "com.coderjeet.autoupdater",
    "productName": "Nexon",
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "package.json",
      "index.html",
      "assets/**/*",
      "screens/**/*"
    ],
    "extraResources": [
      {
        "from": "build/system_health.py",
        "to": "system_health.py"
      }
    ],
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "include": "installer.nsi"
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  },
  "author": "Deeksha Khattar",
  "license": "ISC",
  "devDependencies": {
    "electron": "^19.0.9",
    "electron-builder": "^23.6.0",
    "nodemon": "^2.0.19"
  },
  "dependencies": {
    "electron-updater": "^5.3.0"
  }
}